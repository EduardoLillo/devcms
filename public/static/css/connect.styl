body
	background-color #f6f6f6
	margin 0px
	 
	
.mtop16
	margin-top 16px
	

.box
	background-color #f6f6f6
	border-radius 8px
	border 1px solid #d6d6d6
	position absolute
	
	width 500px
	.btn-success 
		background-color #E85722
		width 100%
		border 0px
	.form-control
		&:focus
		&:active
			outline none
			box-shadow none		
	.inside
		padding 16px	
	.header
		background #efda5e
		padding 16px
		border-radius 8px 8px 0px 0px
		a
			img
				display block
				margin 0px auto
				width 36%
			.img_header_register
					width 30%
				
	.footer
		text-align center 
		a	
			display inline-block
			font-size .8em
			&:last-child
				margin-left 24px
		
.box_login
	left calc(50% - 250px)
	top calc(50% - 231.25px)
.box_resgister
	left calc(50% - 250px)
	top calc(50% - 353.3px)